@{
    Layout = "_BlankLayout";
}
@{
    ViewData["Title"] = "DataEntry_ISMCompanyDetails";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Enter ISM Company Details Data</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/ORB1/DataEntry_CodeA.css" rel="stylesheet">
</head>
<body class="container mt-5">
    <h2 class="text-center mb-4">ISM Company Details</h2>

    <form id="DataEntryISMCompanyDetailsForm" class="p-4 border rounded bg-light">
        <div class="mb-3">
            <label for="companyName" class="form-label">Company Name:</label>
            <input type="text" class="form-control" id="companyName" name="CompanyName" required>
        </div>
        <div class="mb-3">
            <label for="managerName" class="form-label">Manager Name:</label>
            <input type="text" class="form-control" id="managerName" name="ManagerName" required>
        </div>
        <div class="mb-3">
            <label for="ownerName" class="form-label">Owner Name:</label>
            <input type="text" class="form-control" id="ownerName" name="OwnerName" required>
        </div>
        <div class="mb-3">
            <label for="address" class="form-label">Address:</label>
            <textarea class="form-control" id="address" name="Address" rows="3" required></textarea>
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email:</label>
            <input type="email" class="form-control" id="email" name="Email" required>
        </div>
        <div class="mb-3">
            <label for="contactNumber" class="form-label">Contact Number:</label>
            <input type="tel" class="form-control" id="contactNumber" name="ContactNumber" required>
        </div>
        <div class="mb-3">
            <label for="picDetails" class="form-label">PIC Details:</label>
            <input type="text" class="form-control" id="picDetails" name="PICDetails" required>
        </div>
        <div class="mb-3">
            <label for="pilotProjectStartDate" class="form-label">Pilot Project Start Date:</label>
            <input type="date" class="form-control" id="pilotProjectStartDate" name="PilotProjectStartDate" required>
        </div>
        <div class="mb-3">
            <label for="vesselName" class="form-label">Vessel Name:</label>
            <input type="text" class="form-control" id="vesselName" name="VesselName">
        </div>
        <div class="mb-3">
            <label for="imoNumber" class="form-label">IMO Number:</label>
            <input type="number" class="form-control" id="imoNumber" name="IMONumber">
        </div>
        <div class="mb-3">
            <label for="activeId" class="form-label">Active ID:</label>
            <input type="number" class="form-control" id="activeId" name="ActiveId">
        </div>
        <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" id="flag" name="Flag">
            <label class="form-check-label" for="flag">Flag</label>
        </div>
        <div class="mb-3">
            <label for="lastEntryDate" class="form-label">Last Entry Date:</label>
            <input type="date" class="form-control" id="lastEntryDate" name="LastEntryDate">
        </div>
        <div class="mb-3">
            <label for="lastApprovedDate" class="form-label">Last Approved Date:</label>
            <input type="date" class="form-control" id="lastApprovedDate" name="LastApprovedDate">
        </div>
        <div class="mb-3">
            <label for="subscriptionStartDate" class="form-label">Subscription Start Date:</label>
            <input type="date" class="form-control" id="subscriptionStartDate" name="SubscriptionStartDate">
        </div>
        <div class="mb-3">
            <label for="totalActiveeLog" class="form-label">Total Active eLog:</label>
            <input type="number" class="form-control" id="totalActiveeLog" name="TotalActiveeLog">
        </div>
        <button type="submit" id="saveButton" class="btn btn-primary">Save</button>
        <button type="button" id="resetButton" class="btn btn-secondary">Reset</button>
        <button type="button" id="cancelButton" class="btn btn-danger">Cancel</button>
    </form>

    <p id="message" class="mt-3 text-center"></p>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/DataEntry_ISMCompanyDetails.js"></script>
</body>
</html>