@model eLog.ViewModels.ORB1.CodeFViewModel
@{
    Layout = "_BlankLayout";
    ViewData["Title"] = "Approver_Edit_CodeF";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Approver Edit CodeF Data</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/ORB1/DataEntry_CodeA.css" rel="stylesheet">
</head>
<body class="container mt-5">
    <h2 class="text-center mb-4">APPROVER - CONDITION OF THE OIL FILTERING EQUIPMENT</h2>

    <form asp-action="Edit" asp-controller="CodeF" method="post" id="EditCodeFForm" class="p-4 border rounded bg-light">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="EntryDate" class="form-label">Date (YYYY-MM-DD):</label>
            <input type="date" class="form-control" asp-for="EntryDate" required>
            <span asp-validation-for="EntryDate" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="TimeFailure" class="form-label">Time- Failure:</label>
            <input type="time" class="form-control" asp-for="TimeFailure">
            <span asp-validation-for="TimeFailure" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="TimeOperational" class="form-label">Time- Operational:</label>
            <input type="time" class="form-control" asp-for="TimeOperational">
            <span asp-validation-for="TimeOperational" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ReasonFailure" class="form-label">Reason- Failure:</label>
            <input type="text" class="form-control" asp-for="ReasonFailure">
            <span asp-validation-for="ReasonFailure" class="text-danger"></span>
        </div>

        <!-- New Required Comment Field -->
        <div class="mb-3">
            <label asp-for="Comments" class="form-label">Approver Comment:</label>
            <textarea class="form-control" asp-for="Comments" rows="3" required placeholder="Enter your comments"></textarea>
            <span asp-validation-for="Comments" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <button type="submit" id="approveButton" name="action" value="Approved" class="btn btn-success">Approve</button>
            <button type="submit" id="rejectButton" name="action" value="Rejected" class="btn btn-danger">Reject</button>
            <button type="button" id="cancelButton" class="btn btn-secondary">Cancel</button>
        </div>
        <input type="hidden" id="actionType" name="actionType" />
    </form>

    <div asp-validation-summary="All" class="text-danger"></div>
    <p id="message" class="mt-3 text-center"></p>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@4.0.0/dist/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/ORB1/Approver_DataEdit_codeF.js"></script>
</body>
</html>