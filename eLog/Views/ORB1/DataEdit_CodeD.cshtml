@model eLog.ViewModels.ORB1.CodeDViewModel
@{
    Layout = "_BlankLayout";
    ViewData["Title"] = "Edit_CodeD";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit CodeD Data</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/ORB1/DataEntry_CodeA.css" rel="stylesheet">
</head>
<body class="container mt-5">
    <h2 class="text-center mb-4">EDIT - OILY BILGE WATER HANDLING</h2>

    <form asp-action="Edit" asp-controller="CodeD" method="post" id="EditCodeDForm" class="p-4 border rounded bg-light">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="EntryDate" class="form-label">Date (YYYY-MM-DD):</label>
            <input type="date" class="form-control" asp-for="EntryDate" required>
            <span asp-validation-for="EntryDate" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="MethodDischargeTransferDisposal" class="form-label">Method of Discharge, transfer or Disposal:</label>
            <select class="form-select" asp-for="MethodDischargeTransferDisposal" required disabled>
                <option value="Through 15 PPM Equipment">Through 15 PPM Equipment</option>
                <option value="To Reception facilities">To Reception facilities</option>
                <option value="To Slop, holding or other tank">To Slop, holding or other tank</option>
            </select>
            <span asp-validation-for="MethodDischargeTransferDisposal" class="text-danger"></span>
        </div>

        <!-- Equipment Fields -->
        <div id="EquipmentFields">
            <div class="mb-3">
                <label asp-for="EquipmentQuantity" class="form-label">Quantity (m³):</label>
                <input type="text" class="form-control" asp-for="EquipmentQuantity" required>
                <span asp-validation-for="EquipmentQuantity" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="EquipmentResidue" class="form-label">Residue:</label>
                <input type="text" class="form-control" asp-for="EquipmentResidue" required>
                <span asp-validation-for="EquipmentResidue" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="EquipmentTransferredFrom" class="form-label">Transferred From:</label>
                <input type="text" class="form-control" asp-for="EquipmentTransferredFrom" id="EquipmentTransferredFrom" value="@Model.EquipmentTransferredFrom" required disabled>
                <span asp-validation-for="EquipmentTransferredFrom" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="EquipmentQuantityRetained" class="form-label">Quantity Retained in holding tank:</label>
                <input type="text" class="form-control" asp-for="EquipmentQuantityRetained" required>
                <span asp-validation-for="EquipmentQuantityRetained" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="EquipmentStartTime" class="form-label">Start Time:</label>
                <input type="time" class="form-control" asp-for="EquipmentStartTime" required>
                <span asp-validation-for="EquipmentStartTime" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="EquipmentPositionStart" class="form-label">Position at Start:</label>
                <input type="text" class="form-control" asp-for="EquipmentPositionStart" required>
                <span asp-validation-for="EquipmentPositionStart" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="EquipmentStopTime" class="form-label">Stop Time:</label>
                <input type="time" class="form-control" asp-for="EquipmentStopTime" required>
                <span asp-validation-for="EquipmentStopTime" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="EquipmentPositionStop" class="form-label">Position at Stop:</label>
                <input type="text" class="form-control" asp-for="EquipmentPositionStop" required>
                <span asp-validation-for="EquipmentPositionStop" class="text-danger"></span>
            </div>
        </div>

        <!-- Reception Fields -->
        <div id="ReceptionFields" style="display: none;">
            <div class="mb-3">
                <label asp-for="ReceptionQuantity" class="form-label">Quantity (m³):</label>
                <input type="text" class="form-control" asp-for="ReceptionQuantity" required>
                <span asp-validation-for="ReceptionQuantity" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ReceptionResidue" class="form-label">Residue:</label>
                <input type="text" class="form-control" asp-for="ReceptionResidue" required>
                <span asp-validation-for="ReceptionResidue" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ReceptionTransferredFrom" class="form-label">Transferred From:</label>
                <input type="text" class="form-control" asp-for="ReceptionTransferredFrom" id="ReceptionTransferredFrom" value="@Model.ReceptionTransferredFrom" required disabled>
                <span asp-validation-for="ReceptionTransferredFrom" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ReceptionQuantityRetained" class="form-label">Quantity Retained:</label>
                <input type="text" class="form-control" asp-for="ReceptionQuantityRetained" required>
                <span asp-validation-for="ReceptionQuantityRetained" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ReceptionStartTime" class="form-label">Start Time:</label>
                <input type="time" class="form-control" asp-for="ReceptionStartTime" required>
                <span asp-validation-for="ReceptionStartTime" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ReceptionStopTime" class="form-label">Stop Time:</label>
                <input type="time" class="form-control" asp-for="ReceptionStopTime" required>
                <span asp-validation-for="ReceptionStopTime" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ReceptionPortFacilities" class="form-label">Port Reception Facilities:</label>
                <input type="text" class="form-control" asp-for="ReceptionPortFacilities" required>
                <span asp-validation-for="ReceptionPortFacilities" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ReceptionReceiptNo" class="form-label">Receipt No.:</label>
                <input type="text" class="form-control" asp-for="ReceptionReceiptNo" required>
                <span asp-validation-for="ReceptionReceiptNo" class="text-danger"></span>
            </div>
        </div>

        <!-- Slop Fields -->
        <div id="SlopFields" style="display: none;">
            <div class="mb-3">
                <label asp-for="SlopTransferredTo" class="form-label">Transferred To:</label>
                <input type="text" class="form-control" asp-for="SlopTransferredTo" id="SlopTransferredTo" value="@Model.SlopTransferredTo" required disabled>
                <span asp-validation-for="SlopTransferredTo" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="SlopQuantity" class="form-label">Quantity (m³):</label>
                <input type="text" class="form-control" asp-for="SlopQuantity" required>
                <span asp-validation-for="SlopQuantity" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="SlopResidue" class="form-label">Residue:</label>
                <input type="text" class="form-control" asp-for="SlopResidue" required>
                <span asp-validation-for="SlopResidue" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="SlopTransferredFrom" class="form-label">Transferred From:</label>
                <input type="text" class="form-control" asp-for="SlopTransferredFrom" id="SlopTransferredFrom" value="@Model.SlopTransferredFrom" required disabled>
                <span asp-validation-for="SlopTransferredFrom" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="SlopQuantityRetainedFrom" class="form-label">Quantity Retained- "Transfer From" Tanks:</label>
                <input type="text" class="form-control" asp-for="SlopQuantityRetainedFrom" required>
                <span asp-validation-for="SlopQuantityRetainedFrom" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="SlopStartTime" class="form-label">Start Time:</label>
                <input type="time" class="form-control" asp-for="SlopStartTime" required>
                <span asp-validation-for="SlopStartTime" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="SlopStopTime" class="form-label">Stop Time:</label>
                <input type="time" class="form-control" asp-for="SlopStopTime" required>
                <span asp-validation-for="SlopStopTime" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="SlopQuantityRetainedTo" class="form-label">Quantity Retained- "Transfer To" Tanks:</label>
                <input type="text" class="form-control" asp-for="SlopQuantityRetainedTo" required>
                <span asp-validation-for="SlopQuantityRetainedTo" class="text-danger"></span>
            </div>
        </div>

        <div class="mt-4">
            <button type="submit" id="updateButton" class="btn btn-primary">Update</button>
            <button type="button" id="cancelButton" class="btn btn-danger">Cancel</button>
        </div>
    </form>

    <div asp-validation-summary="All" class="text-danger"></div>
    <p id="message" class="mt-3 text-center"></p>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@4.0.0/dist/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/ORB1/DataEdit_codeD.js"></script>
</body>
</html>