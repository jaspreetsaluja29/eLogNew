@{
    Layout = "_BlankLayout";
 }
@{
    ViewData["Title"] = "DataEntry_CodeE";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Enter CodeE Data</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/ORB1/DataEntry_CodeA.css" rel="stylesheet">
</head>
<body class="container mt-5">
    <h2 class="text-center mb-4">AUTOMATIC STARTING OF DISCHARGE OVERBOARD, TRANSFER OR DISPOSAL OTHERWISE OF BILGE WATER WHICH HAS ACCUMULATED IN MACHINERY SPACES</h2>

    <form id="DataEntryCodeEForm" class="p-4 border rounded bg-light">
        <div class="mb-3">
            <label for="EntryDate" class="form-label">Date (YYYY-MM-DD):</label>
            <input type="date" class="form-control" id="EntryDate" name="EntryDate" required>
        </div>
        <div class="mb-3">
            <label for="AutomaticDischargeType" class="form-label">Select Either of Them:</label>
            <select class="form-select" id="AutomaticDischargeType" name="AutomaticDischargeType" required>
                <option value="Select" selected>Select</option>
                <option value="Overboard">Overboard</option>
                <option value="Transfer">Transfer</option>
            </select>
        </div>
        <div id="OverboardFields" style="display:none;">
            <div class="mb-3">
                    <label for="OverboardPositionShipStart" class="form-label">Position of Ship at Start of Discharge:</label>
                    <input type="text" class="form-control" id="OverboardPositionShipStart" name="OverboardPositionShipStart" required>
            </div>
            <div class="mb-3">
                <label for="OverboardTimeSwitching" class="form-label">Time - Switching Auto Mode:</label>
                <input type="time" class="form-control" id="OverboardTimeSwitching" name="OverboardTimeSwitching" required>
            </div>
        </div>
        <div id="TransferFields" style="display:none;">
            <div class="mb-3">
                <label for="TransferTimeSwitching" class="form-label">Time - Switching Auto Mode:</label>
                <input type="time" class="form-control" id="TransferTimeSwitching" name="TransferTimeSwitching" required>
            </div>
            <div class="mb-3">
                <label for="TransferTankfrom" class="form-label">Tank (From):</label>
                <input type="text" class="form-control" id="TransferTankfrom" name="TransferTankfrom" required>
            </div>
            <div class="mb-3">
                <label for="TransferTankTo" class="form-label">Tank (To):</label>
                <input type="text" class="form-control" id="TransferTankTo" name="TransferTankTo" required>
            </div>
        </div>
        <div class="mb-3">
            <label for="TimeBackToManual" class="form-label"> Time - Back to Manual Operation:</label>
            <input type="time" class="form-control" id="TimeBackToManual" name="TimeBackToManual" required>
        </div>

        <button type="submit" id="saveButton" class="btn btn-primary">Save</button>
        <button type="button" id="resetButton" class="btn btn-secondary">Reset</button>
        <button type="button" id="cancelButton" class="btn btn-danger">Cancel</button>
    </form>

    <p id="message" class="mt-3 text-center"></p>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/ORB1/DataEntry_codeE.js"></script>
</body>
</html>