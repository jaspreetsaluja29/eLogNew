@model eLog.ViewModels.ORB1.CodeEViewModel
@{
    Layout = "_BlankLayout";
    ViewData["Title"] = "Edit_CodeE";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit CodeE Data</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/ORB1/DataEntry_CodeA.css" rel="stylesheet">
</head>
<body class="container mt-5">
    <h2 class="text-center mb-4">EDIT - AUTOMATIC STARTING OF DISCHARGE OVERBOARD, TRANSFER OR DISPOSAL OTHERWISE OF BILGE WATER WHICH HAS ACCUMULATED IN MACHINERY SPACES</h2>

    <form asp-action="Edit" asp-controller="CodeE" method="post" id="EditCodeEForm" class="p-4 border rounded bg-light">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="EntryDate" class="form-label">Date (YYYY-MM-DD):</label>
            <input type="date" class="form-control" asp-for="EntryDate" required>
            <span asp-validation-for="EntryDate" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="AutomaticDischargeType" class="form-label">Select Either of Them:</label>
            <select class="form-select" asp-for="AutomaticDischargeType" required disabled>
                <option value="Select">Select</option>
                <option value="Overboard">Overboard</option>
                <option value="Transfer">Transfer</option>
            </select>
            <span asp-validation-for="AutomaticDischargeType" class="text-danger"></span>
        </div>

        <div id="OverboardFields" style="display:none;">
            <div class="mb-3">
                <label asp-for="OverboardPositionShipStart" class="form-label">Position of Ship at Start of Discharge:</label>
                <input type="text" class="form-control" asp-for="OverboardPositionShipStart">
                <span asp-validation-for="OverboardPositionShipStart" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="OverboardTimeSwitching" class="form-label">Time - Switching Auto Mode:</label>
                <input type="time" class="form-control" asp-for="OverboardTimeSwitching">
                <span asp-validation-for="OverboardTimeSwitching" class="text-danger"></span>
            </div>
        </div>

        <div id="TransferFields" style="display:none;">
            <div class="mb-3">
                <label asp-for="TransferTimeSwitching" class="form-label">Time - Switching Auto Mode:</label>
                <input type="time" class="form-control" asp-for="TransferTimeSwitching">
                <span asp-validation-for="TransferTimeSwitching" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="TransferTankfrom" class="form-label">Tank (From):</label>
                <input type="text" class="form-control" asp-for="TransferTankfrom">
                <span asp-validation-for="TransferTankfrom" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="TransferTankTo" class="form-label">Tank (To):</label>
                <input type="text" class="form-control" asp-for="TransferTankTo">
                <span asp-validation-for="TransferTankTo" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="TimeBackToManual" class="form-label">Time - Back to Manual Operation:</label>
            <input type="time" class="form-control" asp-for="TimeBackToManual" required>
            <span asp-validation-for="TimeBackToManual" class="text-danger"></span>
        </div>

        <button type="submit" id="updateButton" class="btn btn-primary">Update</button>
        <button type="button" id="cancelButton" class="btn btn-danger">Cancel</button>
    </form>

    <div asp-validation-summary="All" class="text-danger"></div>
    <p id="message" class="mt-3 text-center"></p>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@4.0.0/dist/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/ORB1/DataEdit_codeE.js"></script>
</body>
</html>