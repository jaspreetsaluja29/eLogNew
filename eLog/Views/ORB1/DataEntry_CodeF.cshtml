@{
    Layout = "_BlankLayout";
 }
@{
    ViewData["Title"] = "DataEntry_CodeF";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Enter CodeF Data</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/ORB1/DataEntry_CodeA.css" rel="stylesheet">
</head>
<body class="container mt-5">
    <h2 class="text-center mb-4">CONDITION OF THE OIL FILTERING EQUIPMENT</h2>

    <form id="DataEntryCodeFForm" class="p-4 border rounded bg-light">
        <div class="mb-3">
            <label for="EntryDate" class="form-label">Date (YYYY-MM-DD):</label>
            <input type="date" class="form-control" id="EntryDate" name="EntryDate" required>
        </div>
        <div class="mb-3">
            <label for="TimeFailure" class="form-label">Time- Failure:</label>
            <input type="time" class="form-control" id="TimeFailure" name="TimeFailure" required>
        </div>
        <div class="mb-3">
            <label for="TimeOperational" class="form-label">Time- Operational:</label>
            <input type="time" class="form-control" id="TimeOperational" name="TimeOperational" required>
        </div>
        <div class="mb-3">
            <label for="ReasonFailure" class="form-label">Reason- Failure:</label>
            <input type="text" class="form-control" id="ReasonFailure" name="ReasonFailure" required>
        </div>

        <button type="submit" id="saveButton" class="btn btn-primary">Save</button>
        <button type="button" id="resetButton" class="btn btn-secondary">Reset</button>
        <button type="button" id="cancelButton" class="btn btn-danger">Cancel</button>
    </form>

    <p id="message" class="mt-3 text-center"></p>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/ORB1/DataEntry_codeF.js"></script>
</body>
</html>