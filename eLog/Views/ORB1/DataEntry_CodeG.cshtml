@{
    Layout = "_BlankLayout";
 }
@{
    ViewData["Title"] = "DataEntry_CodeG";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Enter CodeG Data</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/ORB1/DataEntry_CodeA.css" rel="stylesheet">
</head>
<body class="container mt-5">
    <h2 class="text-center mb-4">ACCIDENTAL OR OTHER EXCEPTIONAL DISCHARGES OF OIL</h2>

    <form id="DataEntryCodeGForm" class="p-4 border rounded bg-light">
        <div class="mb-3">
            <label for="EntryDate" class="form-label">Date (YYYY-MM-DD):</label>
            <input type="date" class="form-control" id="EntryDate" name="EntryDate" required>
        </div>
        <div class="mb-3">
            <label for="TimeofOccurrence" class="form-label">Time of Occurrence:</label>
            <input type="time" class="form-control" id="TimeofOccurrence" name="TimeofOccurrence" required>
        </div>
        <div class="mb-3">
            <label for="PositionofShip" class="form-label">Place or Position of Ship:</label>
            <input type="text" class="form-control" id="PositionofShip" name="PositionofShip" required>
        </div>
        <div class="mb-3">
            <label for="ApproxQuantity" class="form-label">Approximate Quantity:</label>
            <input type="text" class="form-control" id="ApproxQuantity" name="ApproxQuantity" required>
        </div>
        <div class="mb-3">
            <label for="TypeofOil" class="form-label">Type of Oil:</label>
            <input type="text" class="form-control" id="TypeofOil" name="TypeofOil" required>
        </div>
        <div class="mb-3">
            <label for="Reasons" class="form-label">Reasons:</label>
            <input type="text" class="form-control" id="Reasons" name="Reasons" required>
        </div>

        <button type="submit" id="saveButton" class="btn btn-primary">Save</button>
        <button type="button" id="resetButton" class="btn btn-secondary">Reset</button>
        <button type="button" id="cancelButton" class="btn btn-danger">Cancel</button>
    </form>

    <p id="message" class="mt-3 text-center"></p>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/ORB1/DataEntry_codeG.js"></script>
</body>
</html>