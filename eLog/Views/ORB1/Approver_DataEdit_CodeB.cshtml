@model eLog.ViewModels.ORB1.CodeBViewModel
@{
    Layout = "_BlankLayout";
    ViewData["Title"] = "Approver_Edit_CodeB";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Approver Edit CodeB Data</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/ORB1/DataEntry_CodeA.css" rel="stylesheet">
</head>
<body class="container mt-5">
    <h2 class="text-center mb-4">APPROVER - CONDITION OF THE OIL FILTERING EQUIPMENT</h2>

    <form asp-action="Edit" asp-controller="CodeB" method="post" id="EditCodeBForm" class="p-4 border rounded bg-light">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="EntryDate" class="form-label">Date (YYYY-MM-DD):</label>
            <input type="date" class="form-control" asp-for="EntryDate" required>
            <span asp-validation-for="EntryDate" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="IdentityOfTanks" class="form-label">Identity of Tank(s):</label>
            <input type="text" class="form-control" asp-for="IdentityOfTanks">
            <span asp-validation-for="IdentityOfTanks" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="PositionOfShipStart" class="form-label">Position of Ship at Start of Discharge:</label>
            <input type="text" class="form-control" asp-for="PositionOfShipStart">
            <span asp-validation-for="PositionOfShipStart" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="PositionOfShipCompletion" class="form-label">Position of Ship on Completion of Discharge:</label>
            <input type="text" class="form-control" asp-for="PositionOfShipCompletion">
            <span asp-validation-for="PositionOfShipCompletion" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ShipSpeedDischarge" class="form-label">Ship's Speed(s) during Discharge (kts):</label>
            <input type="text" class="form-control" asp-for="ShipSpeedDischarge">
            <span asp-validation-for="ShipSpeedDischarge" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="MethodOfDischarge" class="form-label">Method of Discharge:</label>
            <select class="form-select" asp-for="MethodOfDischarge" required disabled>
                <option value="Select" selected>Select</option>
                <option value="Through 15 ppm Equipment">Through 15 ppm Equipment</option>
                <option value="To Reception Facilities">To Reception Facilities</option>
            </select>
            <span asp-validation-for="MethodOfDischarge" class="text-danger"></span>
        </div>

        <div id="ReceptionFields" style="display: none;">
            <div class="mb-3">
                <label asp-for="ReceiptNo" class="form-label">Receipt No.:</label>
                <input type="text" class="form-control" asp-for="ReceiptNo">
                <span asp-validation-for="ReceiptNo" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="QuantityDischarged" class="form-label">Quantity Discharged in m³:</label>
            <input type="text" class="form-control" asp-for="QuantityDischarged">
            <span asp-validation-for="QuantityDischarged" class="text-danger"></span>
        </div>

        <!-- New Required Comment Field -->
        <div class="mb-3">
            <label asp-for="Comments" class="form-label">Approver Comment:</label>
            <textarea class="form-control" asp-for="Comments" rows="3" required placeholder="Enter your comments"></textarea>
            <span asp-validation-for="Comments" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <button type="submit" id="approveButton" name="action" value="Approved" class="btn btn-success">Approve</button>
            <button type="submit" id="rejectButton" name="action" value="Rejected" class="btn btn-danger">Reject</button>
            <button type="button" id="cancelButton" class="btn btn-secondary">Cancel</button>
        </div>
        <input type="hidden" id="actionType" name="actionType" />
    </form>

    <div asp-validation-summary="All" class="text-danger"></div>
    <p id="message" class="mt-3 text-center"></p>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@4.0.0/dist/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/ORB1/Approver_DataEdit_codeB.js"></script>
</body>
</html>