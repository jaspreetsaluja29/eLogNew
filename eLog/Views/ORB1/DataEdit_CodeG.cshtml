@model eLog.ViewModels.ORB1.CodeGViewModel
@{
    Layout = "_BlankLayout";
    ViewData["Title"] = "Edit_CodeG";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit CodeG Data</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/ORB1/DataEntry_CodeA.css" rel="stylesheet">
</head>
<body class="container mt-5">
    <h2 class="text-center mb-4">EDIT - ACCIDENTAL OR OTHER EXCEPTIONAL DISCHARGES OF OIL</h2>

    <form asp-action="Edit" asp-controller="CodeG" method="post" id="EditCodeGForm" class="p-4 border rounded bg-light">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="EntryDate" class="form-label">Date (YYYY-MM-DD):</label>
            <input type="date" class="form-control" asp-for="EntryDate" required>
            <span asp-validation-for="EntryDate" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="TimeofOccurrence" class="form-label">Time of Occurrence:</label>
            <input type="time" class="form-control" asp-for="TimeofOccurrence">
            <span asp-validation-for="TimeofOccurrence" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="PositionofShip" class="form-label">Position of Ship:</label>
            <input type="text" class="form-control" asp-for="PositionofShip">
            <span asp-validation-for="PositionofShip" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ApproxQuantity" class="form-label">Approximate Quantity (m³):</label>
            <input type="number" step="0.01" class="form-control" asp-for="ApproxQuantity">
            <span asp-validation-for="ApproxQuantity" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="TypeofOil" class="form-label">Type of Oil:</label>
            <input type="text" class="form-control" asp-for="TypeofOil">
            <span asp-validation-for="TypeofOil" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Reasons" class="form-label">Reasons for Discharge:</label>
            <textarea class="form-control" asp-for="Reasons" rows="3"></textarea>
            <span asp-validation-for="Reasons" class="text-danger"></span>
        </div>

        <button type="submit" id="updateButton" class="btn btn-primary">Update</button>
        <button type="button" id="cancelButton" class="btn btn-danger">Cancel</button>
    </form>

    <div asp-validation-summary="All" class="text-danger"></div>
    <p id="message" class="mt-3 text-center"></p>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@4.0.0/dist/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/ORB1/DataEdit_codeG.js"></script>
</body>
</html>