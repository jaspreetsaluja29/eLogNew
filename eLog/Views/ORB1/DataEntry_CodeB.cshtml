@{
    Layout = "_BlankLayout";
 }
@{
    ViewData["Title"] = "DataEntry_CodeB";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Enter CodeB Data</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/ORB1/DataEntry_CodeA.css" rel="stylesheet">
</head>
<body class="container mt-5">
    <h2 class="text-center mb-4">DISCHARGE OF DIRTY BALLAST OR CLEANING WATER FROM OIL FUEL TANKS REFERRED TO UNDER CODE (A)</h2>

    <form id="DataEntryCodeBForm" class="p-4 border rounded bg-light">
        <div class="mb-3">
            <label for="EntryDate" class="form-label">Date (YYYY-MM-DD):</label>
            <input type="date" class="form-control" id="EntryDate" name="EntryDate" required>
        </div>
        <div class="mb-3">
            <label for="IdentityOfTanks" class="form-label">Identity of Tank(s):</label>
            <input type="text" class="form-control" id="IdentityOfTanks" name="IdentityOfTanks" required>
        </div>
        <div class="mb-3">
            <label for="PositionOfShipStart" class="form-label">Position of ship at start of Discharge:</label>
            <input type="text" class="form-control" id="PositionOfShipStart" name="PositionOfShipStart" required>
        </div>
        <div class="mb-3">
            <label for="PositionOfShipCompletion" class="form-label">Position of ship on completion of Discharge:</label>
            <input type="text" class="form-control" id="PositionOfShipCompletion" name="PositionOfShipCompletion" required>
        </div>
        <div class="mb-3">
            <label for="ShipSpeedDischarge" class="form-label"> Ship's speed(s) during Discharge (kts):</label>
            <input type="text" class="form-control" id="ShipSpeedDischarge" name="ShipSpeedDischarge" required>
        </div>
        <div class="mb-3">
            <label for="MethodOfDischarge" class="form-label">Method of Discharge:</label>
            <select class="form-select" id="MethodOfDischarge" name="MethodOfDischarge" required>
                <option value="Select" selected>Select</option>
                <option value="Through 15 ppm Equipment">Through 15 ppm Equipment</option>
                <option value="To Reception Facilities">To Reception Facilities</option>
            </select>
        </div>

        <div id="ReceptionFields" style="display: none;">
            <div class="mb-3">
                <label for="ReceiptNo" class="form-label">Receipt No.:</label>
                <input type="text" class="form-control" id="ReceiptNo" name="ReceiptNo" required>
            </div>
            <div class="mb-3">
                <label for="ReceptionAttachment" class="form-label">Upload Attachment:</label>
                <input type="file" class="form-control" id="ReceptionAttachment" name="ReceptionAttachment" accept=".jpg,.png,.pdf,.doc,.docx,.xlsx, .xlsm">
                <div id="attachmentPreview" class="mt-2"></div>
            </div>
        </div>

        <div class="mb-3">
            <label for="QuantityDischarged" class="form-label">Quantity Discharged (m³):</label>
            <input type="text" class="form-control" id="QuantityDischarged" name="QuantityDischarged" required>
        </div>

        <button type="submit" id="saveButton" class="btn btn-primary">Save</button>
        <button type="button" id="resetButton" class="btn btn-secondary">Reset</button>
        <button type="button" id="cancelButton" class="btn btn-danger">Cancel</button>
    </form>

    <p id="message" class="mt-3 text-center"></p>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/ORB1/DataEntry_codeB.js"></script>
</body>
</html>